<?xml version="1.0" encoding="UTF-8"?>
<ConnectedApp xmlns="http://soap.sforce.com/2006/04/metadata">
    <contactEmail>aws-integration@yourcompany.com</contactEmail>
    <description>Connected App for AWS services integration including Lambda, S3, and API Gateway</description>
    <label>AWS Integration Hub</label>
    <oauthConfig>
        <callbackUrl>https://your-aws-api-gateway.amazonaws.com/oauth/callback</callbackUrl>
        <scopes>Api</scopes>
        <scopes>RefreshToken</scopes>
        <scopes>Web</scopes>
        <scopes>Full</scopes>
    </oauthConfig>
    <oauthPolicy>
        <ipRelaxation>BYPASS</ipRelaxation>
        <refreshTokenPolicy>infinite</refreshTokenPolicy>
    </oauthPolicy>
</ConnectedApp>
