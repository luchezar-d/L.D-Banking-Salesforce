<aura:component controller="CampingListController">
    <aura:attribute name="newItem" type="Camping_Item__c" default="{'Name': '',
                        											'Price__c': 0,
                       												'Quantity__c': 0,
                        											'Reimbursed__c': false,
                                                                   'sobjectType':'Camping_Item__c'}"/>
    
    <!--<aura:attribute name="searchItem" type="Camping_Item__c" default="{'Name': '',
                        											'Price__c': 0,
                       												'Quantity__c': 0,
                        											'Reimbursed__c': false,
                                                                   'sobjectType':'Camping_Item__c'}"/>-->
    <aura:registerEvent name="editItem" type="c:editItemEvent"/>
    <aura:registerEvent name="addItem" type="c:addItemEvent"/>
    <aura:registerEvent name="searchForItem" type="c:SearchEvent"/>
    <!--<aura:registerEvent name="searchItem" type="c:searchEvent"/>
    
    <aura:handler name="searchForItem" action="{!c.handleSearchtItem}" event="c:searchEvent"/>
	 
    <aura:attribute name="searchValue" type="Camping_Item__c" default="{'Name': '',
                        											'Price__c': 0,
                       												'Quantity__c': 0,
                        											'Reimbursed__c': false,
                                                                   'sobjectType':'Camping_Item__c'}"/>
    
    <aura:attribute name="searchList" type="Camping_Item__c[]" required="false"/>
    
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>-->
    <form>
    <lightning:layout horizontalAlign="center" multipleRows="true">
	
        <lightning:layoutItem flexibility="auto" padding="horizontal-medium" size="12">
    	<lightning:input aura:id="campingform" label="Camping Name"
                             name="campingname"
                             value="{!v.newItem.Name}"/> 
        </lightning:layoutItem>
        <lightning:layoutItem flexibility="auto" padding="horizontal-medium" size="12">
        <lightning:input aura:id="campingform" type="number" label="Camping Price"
                             name="campingprice"
                         	 formatter="currency"
                             value="{!v.newItem.Price__c}"/>
        </lightning:layoutItem>
        <lightning:layoutItem flexibility="auto" padding="horizontal-medium" size="12">
        <lightning:input aura:id="campingform" type="number" label="Camping Quantity"
                             name="campingnumber"
                         	 min="1"
                             value="{!v.newItem.Quantity__c}"/>
        </lightning:layoutItem>
        <lightning:layoutItem flexibility="auto" padding="horizontal-medium" size="12">
        <lightning:input type="checkbox" aura:id="campingform" label="Reimbursed?"  
                             name="camreimbursed"
                             checked="{!v.newItem.Packed__c}"/>
        </lightning:layoutItem>
        <lightning:layout multipleRows="true">
        <lightning:layoutItem flexibility="auto" padding="horizontal-medium" size="6">
        <lightning:button label="Insert" 
                              class="slds-m-top--small"
                              variant="brand"
                              onclick="{!c.clickCreateItem}"/>
            </lightning:layoutItem>
            <lightning:layoutItem flexibility="auto" padding="horizontal-medium" size="6">
    		<lightning:button label="Update" 
                              class="slds-m-top--small"
                              variant="brand"
                              onclick="{!c.clickUpdateItem}"/>
        </lightning:layoutItem>
        
        </lightning:layout>
        <lightning:layoutItem flexibility="auto" padding="horizontal-medium" size="12">
        <lightning:card variant="Narrow" title="Your record" iconName="standard:account">
        <aura:set attribute="actions">
            <lightning:buttonIcon iconName="utility:down" variant="border-filled" alternativeText="Show More"/>
        </aura:set>
        <p class="slds-p-horizontal_small"></p>
   		 </lightning:card>    
        <lightning:input name="searchInput" label="Search by name" placeholder="Enter record name..." 
                         					value="{!v.newItem.Name}"/> 
            
        
        </lightning:layoutItem> 
        <lightning:layout horizontalAlign="center" multipleRows="true">
        <lightning:layoutItem flexibility="auto" padding="horizontal-medium" size="12">
    		<lightning:button label="Search" 
                              class="slds-m-top--small"
                              variant="brand"
                              onclick="{!c.clickSearchItem}"/>
        </lightning:layoutItem>
        </lightning:layout>
        </lightning:layout>
         </form>
</aura:component>